---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class={`fixed bottom-6 left-1/2 transform -translate-x-1/2 z-50 ${className || ''}`}>
  <div class="dynamic-island group">
    <!-- Collapsed state -->
    <div class="island-collapsed">
      <div class="pulse-dot"></div>
    </div>
    
    <!-- Expanded state -->
    <div class="island-expanded">
      <a href="https://instagram.com/fs_cinema" target="_blank" rel="noopener" class="island-icon">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect width="20" height="20" x="2" y="2" rx="5" ry="5"/>
          <circle cx="12" cy="12" r="3"/>
          <circle cx="17.5" cy="6.5" r="1"/>
        </svg>
      </a>
      
      <a href="tel:+2348130091235" class="island-icon">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
        </svg>
      </a>
      
      <a href="https://twitter.com/femisuccess7" target="_blank" rel="noopener" class="island-icon">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"/>
        </svg>
      </a>
    </div>
  </div>
</div>
<style>
  .dynamic-island {
    @apply relative;
  }
  
  .island-collapsed {
    @apply w-12 h-12 bg-black/80 backdrop-blur-xl rounded-full;
    @apply flex items-center justify-center;
    @apply border border-white/10;
    @apply transition-all duration-500 ease-out;
    @apply group-hover:opacity-0 group-hover:scale-75;
  }
  
  .pulse-dot {
    @apply w-3 h-3 bg-green-400 rounded-full;
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
  
  .island-expanded {
    @apply absolute inset-0 opacity-0 scale-75;
    @apply flex items-center gap-4 px-6 py-4;
    @apply bg-black/90 backdrop-blur-xl rounded-full;
    @apply border border-white/20;
    @apply transition-all duration-500 ease-out;
    @apply group-hover:opacity-100 group-hover:scale-100;
    transform-origin: center;
    min-width: 200px;
    left: 50%;
    transform: translateX(-50%) scale(0.75);
  }
  
  .group:hover .island-expanded {
    transform: translateX(-50%) scale(1);
  }
  
  .island-icon {
    @apply w-10 h-10 rounded-full;
    @apply bg-white/10 hover:bg-white/20;
    @apply flex items-center justify-center;
    @apply text-white hover:text-blue-400;
    @apply transition-all duration-300 ease-out;
    @apply hover:scale-110 active:scale-95;
  }
  
  .island-icon:first-child {
    @apply hover:text-pink-400;
  }
  
  .island-icon:nth-child(2) {
    @apply hover:text-green-400;
  }
  
  .island-icon:last-child {
    @apply hover:text-blue-400;
  }
  
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: .5;
    }
  }  
  /* Enhanced glass effect */
  .dynamic-island::before {
    content: '';
    @apply absolute inset-0 rounded-full;
    background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%);
    @apply pointer-events-none;
  }
  
  /* Subtle shadow */
  .island-collapsed,
  .island-expanded {
    box-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.3),
      0 2px 8px rgba(0, 0, 0, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
  }
  
  /* Hover glow effect */
  .group:hover .island-expanded {
    box-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.4),
      0 2px 8px rgba(0, 0, 0, 0.3),
      0 0 20px rgba(59, 130, 246, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.15);
  }
</style>